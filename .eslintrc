{
    "env": {
        "browser": true,
        "es6": true
    },
    "plugins": [
        "react"
    ],
    "ecmaFeatures": {
        "arrowFunctions": true,
        modules: true
    },
    "rules": {
        "curly": 2,
        "eqeqeq": 2,
        "quotes": [2, "double", "avoid-escape"],
        "no-undef": 2,
        "no-use-before-define": [2, "nofunc"],
        "new-cap": 0,
        "no-caller": 2,
        "wrap-iife": 2,
        "indent": [2, 4],
        "no-trailing-spaces": 2
    },
    "globals": {
        "define": true,
        "require": true,
        "module": true,
        "requirejs": true,
        "it": true,
        "expect": true,
        "describe": true,
        "spyOn": true,
        "afterEach": true,
        "test": true,
        "ok": true,
        "console": true,
        "runs": true,
        "waitsFor": true,
        "beforeEach": true,
        "xit": true,
        "xdescribe": true
    },
    parserOptions: {
        sourceType: "module",
        "ecmaFeatures": {
            "jsx": true
        }
    }
}
